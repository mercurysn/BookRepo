@{
    ViewBag.Title = "Index";
}
@model List<BookRepo.Models.ViewModels.Book>


<h2>Stats</h2>
<div class="main-body">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Books
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover jquery-dataTable" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Name</th>
                                    <th>Author</th>
                                    <th>Time</th>
                                    <th>Pages</th>
                                    <th>Series</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var list in @Model)
                                {
                                    int maxPage = @Model.Max(m => m.Pages);
                                    int maxMinutes = @Model.Max(m => m.Minutes);

                                    <tr>
                                        <td><img class="table-thumbnail" src="data:image/jpg;base64,@list.CoverHash" /></td>
                                        <td>@list.Name</td>
                                        <td>@list.Author</td>
                                        <td>
                                            @list.RunningTime<br />
                                        <div class="progress">
                                            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="@(list.Minutes * 100 / maxMinutes) " aria-valuemin="0" aria-valuemax="100" style="width: @(list.Minutes * 100 / maxMinutes)%">
                                                <span class="sr-only"></span>
                                            </div>
                                        </div>
                                    </td>
                                        <td>
                                            @list.Pages<br />
                                            <div class="progress">
                                                <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="@(list.Pages * 100 / maxPage) " aria-valuemin="0" aria-valuemax="100" style="width: @(list.Pages * 100 / maxPage)%">
                                                    <span class="sr-only">40% Complete (success)</span>
                                                </div>
                                            </div>
                                        </td>
                                        <td></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


